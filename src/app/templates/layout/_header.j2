<header class="bg-white border-b border-gray-300">
  <nav class="max-w-7xl mx-auto">
    <div class="navbar py-4 lg:px-8 px-4">
      <div class="flex-none mr-2">
        <a href="/"><img src="/static/img/logo-cnll.png" alt="" class="h-8"></a>
      </div>

      <div class="flex-1 px-2 mx-2">
        <div class="items-stretch hidden lg:flex">
          {% for navitem in g.menus.main %}
            {% if navitem.active %}
              {% set class="bg-blue-100" %}
            {% else %}
              {% set class="" %}
            {% endif %}
            <a href="{{ navitem.url }}" class="btn btn-ghost mr-4 text-gray-700 text-base {{ class }}">
              {{ navitem.label }}
            </a>
          {% endfor %}
        </div>
      </div>

