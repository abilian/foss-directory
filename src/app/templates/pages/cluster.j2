{% extends "layout/_layout.j2" %}
{% from "macros/_card_societe.j2" import card %}

{% block main %}
  <main class="bg-gray-100 py-8">
    <div class="mb-8 bg-white p-6 shadow rounded text-gray-600 ">
      <h1 class="text-2xl font-medium text-gray-800 mb-4">
        {% if cluster.nom == "Adhérent direct" %}
          Adhérents directs
        {% else %}
          Cluster: {{ cluster.nom }}
        {% endif %}
      </h1>

      <p class="text-gray-600 mb-4">
        {{ cluster.description }}
      </p>

      <p>
        Site Web:
        <a class="underline text-blue-700" href="{{ cluster.site_web }}">{{ cluster.site_web }}</a>
      </p>
    </div>

    <div class="grid xl:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-4 xl:gap-8 mt-8">
      {% for societe in societes %}
        {{ card(societe) }}
      {% endfor %}
    </div>
  </main>
{% endblock %}
