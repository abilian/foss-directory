{% extends "_layout.j2" %}

{% block content %}
  <div class="container mx-auto mb-4">

    <p class="text-gray-700 mb-4 text-sm">
      Vous êtes ici:
      <a href="/" class="no-underline hover:underline">Annuaire CNLL</a> /
      Entreprises /
      {{ societe.nom }}
    </p>

    <div class="flex flex-row flex-wrap -mx-2">

      <div class="w-full md:w-2/3 mb-4 px-2">

        <div class="relative bg-white rounded border shadow mb-4">
          <h1 class="text-xl text-gray-800 bg-gray-200 font-bold border-b px-3 py-1"
            >{{ societe.nom }}</h1>

          <div class="p-3">
            <p>Site web: <a href="{{ societe.site_web }}">{{ societe.site_web }}</a></p>

            <p>Effectif salarié France: {{ societe.effectif }}</p>
            <p>SIREN: {{ societe.siren }}</p>

            {% if societe.short_description %}
              <p>Description: {{ societe.short_description }}</p>
            {% endif %}

            <p>Membre du ou des clusters:
              {% for cluster in societe.clusters %}
                <a href="{{ url_for(".cluster", cluster=cluster) }}">{{ cluster }}</a>
              {% endfor %}</p>
          </div>
        </div>

        <div class="relative bg-white rounded border shadow my-4">
          <h2 class="text-lg text-gray-800 bg-gray-200 font-bold border-b px-3 py-1"
            >Etablissements</h2>

          <div class="p-3">
            <ul>
              {% for etablissement in societe.etablissements %}
                {% if etablissement.is_active %}
                  <li>{{ etablissement.adresse }}, {{ etablissement.ville }}, {{ etablissement.region }}
                    {% if etablissement.is_siege %}[Siège]{% endif %}
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>

      <div class="w-full md:w-1/3 mb-4 px-2">

        <div class="relative bg-white rounded border shadow mb-4">
          <h2 class="text-lg text-gray-800 bg-gray-200 font-bold border-b px-3 py-1"
            >Site Web</h2>

          <div><a href="{{ societe.site_web }}"><img alt=""
              src="{{ url_for(".screenshot_societe", siren=societe.siren) }}"></a></div>
        </div>

        {% if societe.solutions %}
          <div class="relative bg-white rounded border shadow mb-4">
            <h2 class="text-lg text-gray-800 bg-gray-200 font-bold border-b px-3 py-1"
              >Expertise / solutions</h2>

            <div class="p-3">
              <ul>
                {% for solution in societe.solutions|sort %}
                  <li><a href="{{ url_for(".solution", id=solution.id) }}">{{ solution.id }}</a></li>
                {% endfor %}
              </ul>
            </div>
          </div>
        {% endif %}

      </div>
    </div>
  </div>
{% endblock %}
